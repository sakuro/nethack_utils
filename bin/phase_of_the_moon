#!/usr/local/bin/ruby
# -*- encoding: US-ASCII -*-

require 'nethack_utils'
require 'gettext'

include GetText
bindtextdomain 'nethack_utils'

today = Date.today

if today.new_moon?
  puts NethackUtils::PhaseOfTheMoon::NEW_MOON_MESSAGE
elsif today.full_moon?
  puts NethackUtils::PhaseOfTheMoon::FULL_MOON_MESSAGE
end
